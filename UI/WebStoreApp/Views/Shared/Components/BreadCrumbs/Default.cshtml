@model BreadCrumbsViewModel

<div class="breadcrumbs">
    <ol class="breadcrumb">
        <li><a asp-controller="Home" asp-action="Index">Домой</a></li>
        <li class="active"><a asp-controller="Catalog" asp-action="Shop">Каталог</a></li>
        @if (Model.Section != null)
        {
            if (Model.Section.ParentSection!=null)
            {
                <li class="active">
                    <a asp-controller="Catalog" asp-action="Shop" asp-route-id="@Model.Section.ParentSection.Id">
                        @Model.Section.ParentSection.Name
                    </a>
                </li>
            }

            <li class="active">
                <a asp-controller="Catalog" asp-action="Shop" asp-route-id="@Model.Section.Id">
                    @Model.Section.Name
                </a>
            </li>
        }
        @if (Model.Brand!=null)
        {
            <li class="active">
                <a asp-controller="Catalog" asp-action="Shop" asp-route-id="@Model.Brand.Id">
                    @Model.Brand.Name
                </a>
            </li>
        }
        @if (Model.Product!=null)
        {
            <li>
                @Model.Product
            </li>
        }
    </ol>
</div>